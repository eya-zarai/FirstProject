{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="{{ asset(author.picture) }}" class="img-fluid rounded-start" alt="{{ author.username }}" style="height:100%; object-fit:cover;">
            </div>
            <div class="col-md-8 d-flex align-items-center">
                <div class="card-body">
                    <h2 class="card-title mb-3" style="color:#2E8B57;">{{ author.username|upper }}</h2>
                    <p class="fs-5"><strong>Email :</strong> {{ author.email }}</p>
                    <p class="fs-5"><strong>Nombre de livres :</strong> {{ author.nb_books }}</p>
                    <a href="{{ path('listAuthors') }}" class="btn btn-success mt-3">⬅ Retour à la liste</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
