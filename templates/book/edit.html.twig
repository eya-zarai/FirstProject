{# templates/book/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Edit Book{% endblock %}

{% block body %}
<h1>Edit Book</h1>

{{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.category) }}
    {{ form_row(form.author) }}
    {{ form_row(form.publicationDate) }}
    <button class="btn">Update Book</button>
{{ form_end(form) }}

<a href="{{ path('book_list') }}">Back to book list</a>
{% endblock %}
